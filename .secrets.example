# Act Secrets Configuration for Local Testing
# Copy to .secrets (not tracked in git) and fill in your values

# Docker Hub credentials for testing image pushes
DOCKERHUB_TOKEN=your_dockerhub_personal_access_token_here
DOCKERHUB_USERNAME=your_dockerhub_username

# Balena Cloud credentials for testing deployments
BALENA_TOKEN=your_balena_draft_token_here
BALENA_PRODUCTION_TOKEN=your_balena_production_token_here

# Digital Ocean for testbed creation
DIGITALOCEAN_ACCESS_TOKEN=your_do_api_token_here

# Database credentials for testing
POSTGRES_PASSWORD=test_secure_password
POSTGRES_USERNAME=colmena
POSTGRES_DB=colmena_test

# Django configuration for testing
SECRET_KEY=test_django_secret_key_for_local_testing_only_min_50_chars
DEBUG=true
ALLOWED_HOSTS=localhost,127.0.0.1,*.local

# Nextcloud testing credentials
NEXTCLOUD_ADMIN_PASSWORD=test_nextcloud_admin_password
NEXTCLOUD_ADMIN_USER=admin

# GitHub token (usually provided automatically, but needed for act)
GITHUB_TOKEN=your_github_personal_access_token

# Email configuration for testing
EMAIL_HOST=mailcrab
EMAIL_PORT=1025
DEFAULT_FROM_EMAIL=test@colmena.local

# Balena fleet names for testing
BALENA_DRAFT_FLEET=your_org/colmena-os-draft
BALENA_PRODUCTION_FLEET=your_org/colmena-os-production